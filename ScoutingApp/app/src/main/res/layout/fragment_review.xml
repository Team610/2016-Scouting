<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team610.scouting.scoutingapp.ReviewFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match: "
        android:id="@+id/matchNum_review_TextView"
        android:layout_below="@+id/review_title_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Defence Crossed: "
        android:id="@+id/auton_crossed_defence_TextView"
        android:layout_below="@+id/reached_defence_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Data"
        android:id="@+id/send_Button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Review Data"
        android:id="@+id/review_title_TextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Team: "
        android:id="@+id/team_num_review_TextView"
        android:layout_below="@+id/matchNum_review_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Defences: "
        android:id="@+id/defence_select_title_TextView"
        android:layout_below="@+id/alliance_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1. "
        android:id="@+id/defence1_selection_TextView"
        android:layout_below="@+id/defence_select_title_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2. "
        android:id="@+id/defence2_selection_TextView"
        android:layout_below="@+id/defence1_selection_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3. "
        android:id="@+id/defence3_selection_TextView"
        android:layout_below="@+id/defence2_selection_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4. "
        android:id="@+id/defence4_selection_TextView"
        android:layout_below="@+id/defence3_selection_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Auton:"
        android:id="@+id/auton_title_TextView"
        android:layout_below="@+id/defence4_selection_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Reached Defence: "
        android:id="@+id/reached_defence_TextView"
        android:layout_below="@+id/auton_title_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Spybot: "
        android:id="@+id/spybot_TextView"
        android:layout_below="@+id/auton_crossed_defence_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ball: "
        android:id="@+id/auton_ball_TextView"
        android:layout_below="@+id/spybot_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Robot Ended: "
        android:id="@+id/auton_robot_location_TextView"
        android:layout_below="@+id/auton_ball_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TeleOp"
        android:id="@+id/teleop_title_TextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/review_title_TextView"
        android:layout_toEndOf="@+id/review_title_TextView"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="72dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Defences: "
        android:id="@+id/teleop_defence_TextView"
        android:layout_below="@+id/teleop_title_TextView"
        android:layout_alignLeft="@+id/teleop_title_TextView"
        android:layout_alignStart="@+id/teleop_title_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1. 0 crosses, white"
        android:id="@+id/teleop_defence1_TextView"
        android:layout_below="@+id/teleop_defence_TextView"
        android:layout_alignLeft="@+id/teleop_defence_TextView"
        android:layout_alignStart="@+id/teleop_defence_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2. 0 crosses, white"
        android:id="@+id/teleop_defence2_TextView"
        android:layout_below="@+id/teleop_defence1_TextView"
        android:layout_alignLeft="@+id/teleop_defence1_TextView"
        android:layout_alignStart="@+id/teleop_defence1_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="3. 0 crosses, white"
        android:id="@+id/teleop_defence3_TextView"
        android:layout_below="@+id/teleop_defence2_TextView"
        android:layout_alignLeft="@+id/teleop_defence2_TextView"
        android:layout_alignStart="@+id/teleop_defence2_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="4. 0 crosses, white"
        android:id="@+id/teleop_defence4_TextView"
        android:layout_below="@+id/teleop_defence3_TextView"
        android:layout_alignLeft="@+id/teleop_defence3_TextView"
        android:layout_alignStart="@+id/teleop_defence3_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="5. 0 crosses, white"
        android:id="@+id/teleop_defence5_TextView"
        android:layout_below="@+id/teleop_defence4_TextView"
        android:layout_alignLeft="@+id/teleop_defence4_TextView"
        android:layout_alignStart="@+id/teleop_defence4_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="HighGoal - Scores: 0, Misses: 0"
        android:id="@+id/high_goal_teleop_TextView"
        android:layout_below="@+id/teleop_defence5_TextView"
        android:layout_alignLeft="@+id/teleop_defence5_TextView"
        android:layout_alignStart="@+id/teleop_defence5_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="LowGoal - Scores: 0, Misses: 0"
        android:id="@+id/low_goal_teleop_TextView"
        android:layout_below="@+id/high_goal_teleop_TextView"
        android:layout_alignLeft="@+id/high_goal_teleop_TextView"
        android:layout_alignStart="@+id/high_goal_teleop_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Courtyard - Scores: 0, Misses: 0"
        android:id="@+id/courtyard_drop_teleop_TextView"
        android:layout_below="@+id/low_goal_teleop_TextView"
        android:layout_alignLeft="@+id/low_goal_teleop_TextView"
        android:layout_alignStart="@+id/low_goal_teleop_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fouls: "
        android:id="@+id/foul_TextView"
        android:layout_below="@+id/courtyard_drop_teleop_TextView"
        android:layout_alignLeft="@+id/courtyard_drop_teleop_TextView"
        android:layout_alignStart="@+id/courtyard_drop_teleop_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="20dp"
        android:text="Miscellaneous"
        android:id="@+id/miscellaneous_title_TextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/courtyard_drop_teleop_TextView"
        android:layout_toEndOf="@+id/courtyard_drop_teleop_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hang: "
        android:id="@+id/hang_TextView"
        android:layout_below="@+id/miscellaneous_title_TextView"
        android:layout_alignLeft="@+id/miscellaneous_title_TextView"
        android:layout_alignStart="@+id/miscellaneous_title_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Challenge: "
        android:id="@+id/challenge_TextView"
        android:layout_below="@+id/hang_TextView"
        android:layout_alignLeft="@+id/hang_TextView"
        android:layout_alignStart="@+id/hang_TextView" />

