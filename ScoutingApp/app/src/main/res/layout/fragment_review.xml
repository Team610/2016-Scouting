    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Breach: "
        android:id="@+id/breach_TextView"
        android:layout_below="@+id/challenge_TextView"
        android:layout_alignLeft="@+id/challenge_TextView"
        android:layout_alignStart="@+id/challenge_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
