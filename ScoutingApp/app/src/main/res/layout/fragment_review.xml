    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Checkmate Shots: "
        android:id="@+id/checkmate_TextView"
        android:layout_below="@+id/challenge_TextView"
        android:layout_alignLeft="@+id/challenge_TextView"
        android:layout_alignStart="@+id/challenge_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Defence Shots: "
        android:id="@+id/defence_shots_TextView"
        android:layout_below="@+id/checkmate_TextView"
        android:layout_alignLeft="@+id/checkmate_TextView"
        android:layout_alignStart="@+id/checkmate_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Courtyard Shots: "
        android:id="@+id/pop_shots_TextView"
        android:layout_below="@+id/defence_shots_TextView"
        android:layout_alignLeft="@+id/defence_shots_TextView"
        android:layout_alignStart="@+id/defence_shots_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Defensive Rating: "
        android:id="@+id/defence_rating_TextView"
        android:layout_below="@+id/corner_shot_TextView"
        android:layout_alignLeft="@+id/corner_shot_TextView"
        android:layout_alignStart="@+id/corner_shot_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Scout Name: "
        android:id="@+id/scout_name_TextView"
        android:layout_below="@+id/defence_rating_TextView"
        android:layout_alignLeft="@+id/defence_rating_TextView"
        android:layout_alignStart="@+id/defence_rating_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="50dp"
        android:text="Comment:"
        android:id="@+id/comment_title_TextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/miscellaneous_title_TextView"
        android:layout_toEndOf="@+id/miscellaneous_title_TextView" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Comments"
        android:id="@+id/comment_TextView"
        android:layout_below="@+id/comment_title_TextView"
        android:layout_alignLeft="@+id/comment_title_TextView"
        android:layout_alignStart="@+id/comment_title_TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Corner Shot: "
        android:id="@+id/corner_shot_TextView"
        android:layout_below="@+id/pop_shots_TextView"
        android:layout_alignLeft="@+id/pop_shots_TextView"
        android:layout_alignStart="@+id/pop_shots_TextView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/back_Button"
        android:layout_above="@+id/send_Button"
        android:layout_alignRight="@+id/send_Button"
        android:layout_alignEnd="@+id/send_Button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
